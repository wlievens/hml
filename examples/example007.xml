<?xml version="1.0" encoding="UTF-8"?>
<coatOfArms xmlns="http://github.com/wlievens/heraldry" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://github.com/wlievens/heraldry ../src/main/resources/xsd/heraldry.xsd">
    <title>Earl Spencer</title>
    <blazon>Quarterly Argent and Gules in the second and third quarters a Fret Or overall on a Bend Sable three
        Escallops of the first
    </blazon>
    <shape>heater-shield</shape>
    <background>
        <division type="quarterly">
            <part position="1,3">
                <background>
                    <field tincture="argent"/>
                </background>
            </part>
            <part position="2,4">
                <background>
                    <field tincture="gules"/>
                </background>
                <charges>
                    <ordinary type="fret" tincture="or"/>
                </charges>
            </part>
        </division>
    </background>
    <charges>
        <ordinary type="bend" tincture="sable">
            <charges>
                <repeat number="3">
                    <mobile figure="escallop" tincture="argent"/>
                </repeat>
            </charges>
        </ordinary>
    </charges>
</coatOfArms>